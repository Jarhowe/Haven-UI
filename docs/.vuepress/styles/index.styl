.home 
    .hero
        img 
            animation: rotation 2.5s linear infinite;
    .feature 
        h2
            text-align: center;
        p 
            font-size: 16px;
            color: #99a9bf;
            padding: 0 25px;
            line-height: 32px;

.content__default 
    p 
        font-size: 14px;
        color: #5e6d82;
        line-height: 1.5em;

@keyframes rotation {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}